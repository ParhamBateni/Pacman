<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com" fx:controller="Sample.Controller.MainPageController">
    <HBox layoutX="245.0" layoutY="40.0" styleClass="title">
        <Label text="Main Menu" textFill="chartreuse" />
    </HBox>
    <VBox alignment="CENTER" layoutX="200.0" layoutY="100.0" prefHeight="210.0" prefWidth="200.0">
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0">
            <Button mnemonicParsing="false" onMouseClicked="#newGameClicked" text="new game">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#accountClicked" text="account">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#scoreBoardClicked" text="score board">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#gameSettingsClicked" text="settings">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#logoutClicked" text="logout">
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </VBox>


    <stylesheets>
        <URL value="@../CSS/MenuCss.css" />
    </stylesheets>
</AnchorPane>
